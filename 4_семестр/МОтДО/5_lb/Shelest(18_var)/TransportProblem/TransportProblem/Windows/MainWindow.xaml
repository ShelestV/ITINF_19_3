<Window x:Class="TransportProblem.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TransportProblem"
		mc:Ignorable="d"
		Title="Menu" 
		Height="231" 
		Width="508"
		Background="Black">
    <Grid Height="200" 
		  Width="500">
        <Button Name="PotentialMethodButton"
                Content="Транспортная задача"
                FontSize="20"
				Style="{StaticResource BGTheme}"
				Width="300"
				Height="40"
				Margin="96,40,0,0"
                Click="PotentialMethodButton_Click"/>

        <Button Name="AssignmentProblemButton"
                Content="Задача на назначение"
                FontSize="20"
				Style="{StaticResource BGTheme}"
				Width="300"
				Height="40"
				Margin="96,120,0,0"
                Click="AssignmentProblemButton_Click"/>
    </Grid>
</Window>
